<Window x:Class="Vitalize_Vault.View.ProductManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vitalize_Vault.View"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Product Management" Height="300" Width="400">
    <Grid>
        <!-- Product Name Label and Text Box -->
        <Label Content="Product Name:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <ui:TextBox x:Name="txtProductName" HorizontalAlignment="Left" Margin="120,20,0,0" VerticalAlignment="Top" Width="200"/>

        <!-- Expiration Date Label and Date Picker -->
        <Label Content="Expiration Date:" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top"/>
        <ui:CalendarDatePicker x:Name="dpExpirationDate" HorizontalAlignment="Left" Margin="120,60,0,0" VerticalAlignment="Top" Width="200"/>

        <!-- Add Button -->
        <ui:Button Content="Add Product" HorizontalAlignment="Left" Margin="20,100,0,0" VerticalAlignment="Top" Width="100" Click="AddProduct_Click"/>

        <!-- Edit Button -->
        <ui:Button Content="Edit Product" HorizontalAlignment="Left" Margin="140,100,0,0" VerticalAlignment="Top" Width="100" Click="EditProduct_Click"/>

        <!-- Delete Button -->
        <ui:Button Content="Delete Product" HorizontalAlignment="Left" Margin="260,100,0,0" VerticalAlignment="Top" Width="100" Click="DeleteProduct_Click"/>
    </Grid>
</Window>
